.container{
  background-color: #fff;
}
.wiper-item{
  width: 100%;
  height: 426rpx;
}

.shop {
  width: 100%;
  padding: 0 20rpx;
  margin-top: 30rpx;
}

.shop-title {
  display: flex;
  justify-content: space-between;
  line-height: 40rpx;
  
  width: 90%;
}

.shop-title .score {
  font-size: 36rpx;
  color: red;
  font-weight: 600;
}

.shop-title .like {
  width: 125rpx;
  font-size: 26rpx;
  color: #858585;
}

.shop-num input{
  float: left;
  width: 35rpx;
  height: 30rpx;
  text-align: center;

}



.foot {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 98rpx;
  background: #fff;
  box-shadow: 0px -8px 34px -18px rgba(221, 221, 221, 1);
  display: flex;
  align-items: center;
}

.contact-btn {
  width: 50% !important;
  font-size: 32rpx;
  color: #404040;
  background: #fff;
  font-weight: 400;
  padding: 0;
  height: 100%;
  line-height: 98rpx;
  margin: 0;
}

.contact-btn image {
  width: 28rpx;
  height: 28rpx;
  /* margin-left: 10rpx; */
}

.pay {
  width: 50% !important;
  height: 98rpx;
  background: #ff7000;
 border-radius: 0px;
  color: #fff;
  font-size: 30rpx;
  line-height: 98rpx;
  text-align: center;
  padding: 0;
  font-weight: 400;
}

.pay text {
  font-size: 40rpx;
  color: #fff;
}

.pay-hover {
  background: #df6301;
}
