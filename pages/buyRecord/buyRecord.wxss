/* pages/searchResult/searchResult.wxss */

.container {
  padding: 20rpx 40rpx;
}

.input-box {
  width: 100%;
  position: relative;
}

.placeholder {
  color: #858585;
  font-size: 26rpx;
}

.search-icon {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  left: 25rpx;
  top: 50%;
  transform: translateY(-50%);
}

.search-input {
  background: #f2f2f2;
  padding: 0 60rpx;
  height: 60rpx;
  border-radius: 60rpx;
  font-size: 26rpx;
}

.tab {
  width: 100%;
  /* padding: 40rpx 40rpx 34rpx; */
  padding: 40rpx 0 34rpx;
  position: relative;
  display: flex;
  justify-content: space-between;
}

/* .tab-ceiling {
  position: fixed;
  z-index: 10;
  background: #fff;
  box-shadow: 0px 8px 34px -18px rgba(221, 221, 221, 1);
} */

.tab-item {
  /* padding: 0 48rpx; */
  text-align: center;
  display: inline-block;
  font-size: 28rpx;
  line-height: 28rpx;
  color: #404040;
  flex: 1;
}

.tab-item:not(:last-child) {
  border-right: 2rpx solid #d3d3d3;
}

.tab-item:first-child {
  padding-left: 0;
}

.tab-item:last-child {
  padding-right: 0;
}

.tab-item-active {
  font-size: 32rpx;
  font-weight: 500rpx;
  position: relative;
}

.tab-item-active::after {
  content: '';
  width: 62rpx;
  height: 22rpx;
  display: inline-block;
  position: absolute;
  left: 50%;
  bottom: -11rpx;
  transform: translateX(-50%);
  z-index: -1;
  background-color: #d3d3d3;
}

.no-merchant {
  padding-top: 50rpx;
  font-size: 26rpx;
  color: #858585;
}

/* components/service-item/service-item.wxss */

.service-item {
  padding: 30rpx 0;
  border-bottom: 2rpx solid #e9e9e9;
}

.merchat {
  display: flex;
  width: 100%;
}

.merchat-img {
  width: 176rpx;
  height: 176rpx;
  /* background: #ccc; */
  border-radius: 10rpx;
}

.merchat-info {
  margin-left: 20rpx;
}

.merchat-name {
  color: #404040;
  font-size: 32rpx;
  line-height: 32rpx;
  font-weight: 600;
}

.merchat-msg, .merchat-service-type {
  color: #858585;
  font-size: 26rpx;
}

.merchat-service-type {
  display: flex;
}

.merchat-msg {
  display: flex;
  margin: 14rpx 0;
  color: #ffb000;
  font-size: 26rpx;
}

.type, .price {
  border-right: 2rpx solid #d3d3d3;
}

.type, .price, .distance {
  line-height: 26rpx;
  padding: 0 14rpx;
}

.type {
  padding-left: 0;
}

.service-type {
  line-height: 26rpx;
}

.merchat-feature {
  margin-top: 14rpx;
}

.discount, .feature {
  display: inline-block;
  padding: 8rpx 16rpx;
  text-align: center;
  font-size: 24rpx;
  line-height: 24rpx;
  border-radius: 4rpx;
}

.discount {
  color: red;
  font-weight: 600;

}

.feature {
  background: #fff;
  color: #ff7000;
  margin-left: 20rpx;
  float: right;
  border-radius: 15rpx;
  border: 1px solid #ff7000;
}

