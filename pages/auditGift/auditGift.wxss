
.form-frame {
  padding: 0 40rpx 40rpx;
  background-color: #fff;
  margin-top: 12rpx;
  margin-bottom: 40px;

}
.form-item{
  display: flex;
  padding-top: 32rpx;
  align-items: center;
}
.form-item.intro{
  display: flex;
  align-items: flex-start;
}
.item-title {
  color:#858585;
  padding-right:16rpx;
}
.item-context{
  color:#404040;
  width:540rpx;
  line-height: 48rpx;
}
.item-context text{
  color:#404040;
  padding-left: 10rpx;
}
.item-context text:first-child{
  padding-left: 0;
}
.btn-tag-frame{
  padding: 8rpx 40rpx 188rpx;
  background-color: #fff;
}
.tag-frame {
  display: flex;
}
.tag-title {
  height: 34rpx;
}
.tag-container{
  display: flex;
  flex: 1;
  flex-wrap:wrap;
}
.tag-item{
  border-radius: 4rpx;
  display: flex;
  align-items: center;
  height: 40rpx;
  padding: 0 16rpx;
  font-size: 24rpx;
  margin-left: 16rpx;
  background-color: #fff;
  border:2rpx solid transparent;
  color:#FF7000;
}


.foot {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 98rpx;
  background: #fff;
  box-shadow: 0px -8px 34px -18px rgba(221, 221, 221, 1);
  display: flex;
  align-items: center;
}

.contact-btn {
  width: 50% !important;
  font-size: 32rpx;
  color: #404040;
  background: #fff;
  font-weight: 400;
  padding: 0;
  height: 100%;
  line-height: 98rpx;
  margin: 0;
}

.contact-btn image {
  width: 28rpx;
  height: 28rpx;
  /* margin-left: 10rpx; */
}

.pay {
  width: 50% !important;
  height: 98rpx;
  background: #ff7000;
 border-radius: 0px;
  color: #fff;
  font-size: 30rpx;
  line-height: 98rpx;
  text-align: center;
  padding: 0;
  font-weight: 400;
}

.pay text {
  font-size: 40rpx;
  color: #fff;
}

.pay-hover {
  background: #df6301;
}
